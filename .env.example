# Application Settings
APP_NAME=Onboarding API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=
RELOAD=false

# API Configuration
API_V1_PREFIX=/api/v1
API_TITLE=Onboarding API
API_DESCRIPTION=Onboarding API with FastAPI, Celery, and Webhooks

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Database (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/onboarding

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CELERY_BROKER_URL=redis://localhost:6379/0
REDIS_CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key-change-this
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".pdf", ".jpg", ".jpeg", ".png", ".xlsx"]

# Celery Worker Control
START_CELERY=true

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio/whatsapp
TWILIO_VERIFY_TOKEN=your-optional-verify-token
